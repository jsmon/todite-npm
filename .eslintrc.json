{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "comma-dangle": ["warn", "never"],
    "indent": ["warn", 4],
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "camelcase": "warn",
    "no-unused-vars": "warn"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
